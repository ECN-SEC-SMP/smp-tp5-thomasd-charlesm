{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-13 générer le fichier actif",
            "command": "/usr/bin/g++-13",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspacefolder}/exec"
            ],
            "options": {
                "cwd": "${workspacefolder}"
            },
            "problemMatcher": [
                "$g++"
            ],
            "group": "build",
            "detail": "Tâche générée par le débogueur."
        }
    ],
    "version": "2.0.0"
}